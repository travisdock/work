<div class="notebook-page">
  <div class="page-header">
    <h1 class="page-title">Projects</h1>
    <%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
  </div>

  <% if @active_projects.any? || @archived_projects.any? %>
    <% if @active_projects.any? %>
      <div class="projects-section">
        <h2 class="section-title">
          Active Projects
          <span class="count"><%= @active_projects.count %></span>
        </h2>
        <div class="projects-list">
          <% @active_projects.each do |project| %>
            <div class="project-row priority-<%= project.priority_number %> <%= project.priority_tags.map { |tag| "tag-#{tag}" }.join(' ') %>">
              <%= link_to project.name, project_path(project), class: "project-name" %>
              <span class="project-status status-<%= project.status %>">
                <%= project.status.humanize %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @archived_projects.any? %>
      <div class="projects-section" id="archived-section" data-controller="collapsible" data-collapsible-key="archived-projects">
        <h2 class="section-title" data-action="click->collapsible#toggle" style="cursor: pointer;">
          Archived Projects
          <span class="count"><%= @archived_projects.count %></span>
          <span class="toggle-icon">â–¼</span>
        </h2>
        <div class="projects-list" data-collapsible-target="content">
          <% @archived_projects.each do |project| %>
            <div class="project-row priority-<%= project.priority_number %> <%= project.priority_tags.map { |tag| "tag-#{tag}" }.join(' ') %>">
              <%= link_to project.name, project_path(project), class: "project-name" %>
              <span class="project-status status-<%= project.status %>">
                <%= project.status.humanize %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="empty-state">
      <p class="empty-state-text">No projects yet. Create your first project to get started.</p>
      <%= link_to "Create Project", new_project_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
